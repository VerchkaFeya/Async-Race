{
	  "parser": "@typescript-eslint/parser",
    "plugins": ["@typescript-eslint"],
    "extends": [
			"eslint:recommended", 
			"plugin:@typescript-eslint/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 2020,
        "sourceType": "module"
    },
    "env": {
        "es6": true,
        "browser": true,
        "node": true
    },
    "rules": {
			"@typescript-eslint/no-explicit-any": "error"
    }
}
